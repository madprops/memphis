{
  "manifest_version": 3,
  "name": "Memphis",
  "version": "7",
  "description": "Cover the content of a website",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_icon": {
      "48": "icons/icon-256.png",
      "32": "icons/icon-256.png",
      "16": "icons/icon-256.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "injector.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "img/paste.jpg"
      ],
      "matches": [
        "*://*.youtube.com/*",
        "*://youtu.be/*"
      ]
    }
  ]
}