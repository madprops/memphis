{
    "manifest_version": 2,
    "name": "Memphis",
    "version": "1.0",
    "description": "Cover the content of a website",
    "permissions": [
        "activeTab"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_scripts/injector.js"]
        }
    ],
    "browser_action": {
        "default_icon": {
            "48": "icons/icon-256.png",
            "32": "icons/icon-256.png",
            "16": "icons/icon-256.png"
        }
    }
}